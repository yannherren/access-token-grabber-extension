{
  "manifest_version": 3,
  "name": "Access Token Grabber",
  "description": "Access Token Grabber - Oneâ€‘click JWT tokens from Dev-Tools for faster API testing (Open-source)\n",
  "version": "1.2",
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js"]
      }

  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": [
    "webRequest",
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": "Alt+C",
      "description": "Open the extension and copy token"
    }
  }
}
